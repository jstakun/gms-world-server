<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <persistence-unit name="transactions-optional">
        <provider>org.datanucleus.api.jpa.PersistenceProviderImpl</provider>
        <properties>
            <property name="datanucleus.NontransactionalRead" value="true"/>
            <property name="datanucleus.NontransactionalWrite" value="true"/>
            <property name="datanucleus.ConnectionURL" value="appengine"/>
        </properties>
        <class>com.jstakun.lm.server.persistence.Checkin</class>
        <class>com.jstakun.lm.server.persistence.Comment</class>
        <class>com.jstakun.lm.server.persistence.Config</class>
        <class>com.jstakun.lm.server.persistence.GeocodeCache</class>
        <class>com.jstakun.lm.server.persistence.Hotel</class>
        <class>com.jstakun.lm.server.persistence.Landmark</class>
        <class>com.jstakun.lm.server.persistence.Layer</class>
        <class>com.jstakun.lm.server.persistence.OAuthToken</class>
        <class>com.jstakun.lm.server.persistence.Screenshot</class>
        <class>com.jstakun.lm.server.persistence.Search</class>
        <class>com.jstakun.lm.server.persistence.ServiceLog</class>
        <class>com.jstakun.lm.server.persistence.User</class> 
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
    </persistence-unit>
</persistence>
